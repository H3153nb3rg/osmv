    <com.viewpagerindicator.TitlePageIndicator xmlns:app="http://schemas.android.com/apk/res/at.the.gogo.parkoid"
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFDDDDDD"
        app:footerColor="#FFEE3333"
        app:footerIndicatorStyle="none"
        app:footerLineHeight="2dp"
        android:padding="10dip"
        app:selectedBold="false"
        app:selectedColor="#FF000000"
        app:textColor="#FF999999" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="40"
        android:paddingTop="1dip" >
    </android.support.v4.view.ViewPager>
