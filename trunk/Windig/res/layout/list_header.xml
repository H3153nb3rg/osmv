<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="match_parent" android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal">

	<ImageView android:id="@+id/ImageView02"
		android:layout_height="20dip" android:layout_width="20dip"
		android:layout_gravity="center" />

	<LinearLayout android:id="@+id/LinearLayout02"
		android:layout_width="0dip" android:layout_weight="1"
		android:layout_height="wrap_content" android:orientation="vertical">

		<TextView android:id="@android:id/text1"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:layout_marginLeft="2dip" android:layout_marginRight="2dip"
			android:text="Spitzerberg"
			android:layout_marginTop="4dip" android:textAppearance="?android:attr/textAppearance" />

		<TextView android:id="@android:id/text2"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:layout_marginLeft="2dip" android:layout_marginRight="2dip"
			
			android:text="10.10.2011 21:25"
			android:textAppearance="?android:attr/textAppearanceSmall" />
	</LinearLayout>

	<Button android:id="@+id/refreshButton" android:layout_width="0dip"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:text="@string/button_refresh" android:layout_marginLeft="4dip"
		android:layout_gravity="center"
		android:layout_marginRight="4dip" />
		
	<Button android:id="@+id/settingsButton" android:layout_width="0dip"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:text="@string/button_settings" android:layout_marginLeft="4dip"
		android:layout_gravity="center"
		android:layout_marginRight="4dip" />


 
</LinearLayout>
