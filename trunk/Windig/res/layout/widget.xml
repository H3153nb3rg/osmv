<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="110dp"
	android:layout_height="74dp" 
	android:background="@drawable/box1">

	<TextView android:id="@+id/site_title" android:layout_width="match_parent"
		android:text="Spitzerberg" android:layout_marginLeft="4dip"
		android:layout_marginBottom="0dip" android:textSize="14sp"  
		android:background="#00000000" android:textColor="#FFFFFF"
		android:gravity="left" android:layout_height="wrap_content" />
		
	<TextView android:layout_marginLeft="4dip"
		android:layout_width="match_parent" android:textSize="10sp"
		android:textStyle="bold" android:background="#00000000" android:id="@+id/windspeedmax"
		android:text="32km/h max" android:gravity="left"
		android:layout_marginTop="1dip" android:layout_marginBottom="0dip" android:textColor="#FFFFFF"
		android:layout_height="wrap_content"></TextView>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="match_parent"
		android:layout_margin="0dip" 
		android:layout_height="wrap_content">

		<ImageView android:id="@+id/winddirectionimg"
			android:layout_height="20dip" android:layout_width="20dip"
			android:layout_marginLeft="2dip" android:layout_marginBottom="2dip"
			android:layout_marginRight="2dip" android:layout_marginTop="2dip"
			android:src="@drawable/arrow_e_green" android:layout_gravity="center" />

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="match_parent"
			android:layout_margin="0dip" 
			android:layout_height="match_parent">

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical" android:layout_margin="0dip" 
				android:layout_width="wrap_content" android:layout_height="wrap_content">

				<TextView android:id="@+id/windspeedavg"
					android:layout_width="wrap_content" android:gravity="center"
					android:textSize="11sp" android:background="#00000000"
					android:textColor="#FFFFFF" android:textStyle="bold" android:text="22 km/h"
					android:layout_marginTop="1dip" android:layout_marginBottom="0dip" android:layout_height="wrap_content" />

				<TextView android:id="@+id/winddirection"
					android:layout_width="wrap_content" android:textSize="11sp"
					android:text="327°" android:textStyle="bold" android:background="#00000000"
					android:textColor="#FFFFFF" android:gravity="center"
					android:layout_marginTop="1dip" android:layout_marginBottom="0dip" android:layout_height="wrap_content" />

			</LinearLayout>
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical" android:layout_width="wrap_content"
				android:layout_marginLeft="8dip" android:layout_height="wrap_content">

				<TextView android:id="@+id/temperature"
					android:layout_width="wrap_content" android:gravity="center"
					android:textSize="11sp" android:background="#00000000"
					android:textColor="#FFFFFF" android:text="22°C"
					android:layout_marginTop="1dip" android:layout_marginBottom="0dip" android:layout_height="wrap_content" />

				<TextView android:id="@+id/huminity" android:layout_width="wrap_content"
					android:textSize="11sp" android:text="77%" android:background="#00000000"
					android:textColor="#FFFFFF" android:gravity="center"
					android:layout_marginTop="1dip" android:layout_marginBottom="0dip" android:layout_height="wrap_content" />

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>
	<TextView android:id="@+id/refreshtime" android:layout_width="match_parent"
		android:textSize="8sp" android:text="1/1/2000 12:23" android:gravity="center"
		android:textColor="#FFFFFF" android:layout_marginTop="1dip"
		android:layout_height="wrap_content" />
</LinearLayout>
