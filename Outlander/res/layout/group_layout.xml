	<ImageView android:id="@+id/ImageView01" android:src="@drawable/icon"
		android:layout_height="20dip" android:layout_width="20dip"
		android:layout_marginLeft="40dip"
		android:layout_gravity="center">
		</ImageView>
	<TextView android:id="@+id/tvGroup" android:layout_width="match_parent"
		android:layout_height="35dip" android:text="Groups" android:gravity="center_vertical|right"
	android:paddingLeft="5dip" android:paddingRight="5dip"	
		android:textColor="#ffffffff" android:textStyle="bold">
	</TextView>
</LinearLayout>

