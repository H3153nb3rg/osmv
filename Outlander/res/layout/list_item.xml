<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

        <TextView
            android:id="@android:id/text1"
            style="@style/Theme.Velvet.Card.TextAppearance.Medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_block_side_padding"
            android:paddingRight="@dimen/text_block_side_padding"
             />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:paddingLeft="@dimen/text_block_side_padding"
                 />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/infotext3"
                    style="@style/Theme.Velvet.Card.TextAppearance.Smallest"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/text_block_side_padding"
                    android:paddingRight="@dimen/text_block_side_padding"
                    android:paddingTop="@dimen/text_block_top_padding"
                     />

                <TextView
                    android:id="@+id/infotext4"
                    style="@style/Theme.Velvet.Card.TextAppearance.Smallest"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/text_block_side_padding"
                    android:paddingRight="@dimen/text_block_side_padding"
                    android:paddingTop="@dimen/text_block_top_padding"
                     />
            </LinearLayout>
            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:paddingLeft="@dimen/text_block_side_padding"
                 />
            
            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:focusable="false" />
        </LinearLayout>

        <TextView
            android:id="@android:id/text2"
            style="@style/Theme.Velvet.Card.TextAppearance.Smaller"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_block_side_padding"
            android:paddingRight="@dimen/text_block_side_padding"
            android:paddingTop="@dimen/text_block_top_padding"
            />
    </LinearLayout>

