<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/chart" android:orientation="vertical"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:baselineAligned="false"
	android:layout_margin="8dip">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/chart1" android:orientation="horizontal"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:gravity="center" android:layout_weight="1"
		android:background="@drawable/box1" android:layout_margin="2dip">

	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/chart2" android:orientation="horizontal"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:gravity="center" android:layout_weight="1"
		android:background="@drawable/box1" android:layout_margin="2dip">

	</LinearLayout>

</LinearLayout>
