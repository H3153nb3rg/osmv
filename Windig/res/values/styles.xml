<resources>
	<style name="Theme.PanoViewer" parent="android:Theme.Light">
        <item name="android:windowBackground">@drawable/bg</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="nowCardStyle" parent="android:Widget.TextView">
        <item name="android:background">@drawable/search_bg_shadow</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#707070</item>
    </style>

    
    
    <style name="Weather" parent="@android:style/TextAppearance.StatusBar.EventContent">
        <item name="android:singleLine">true</item>
    </style>
    
    
    <style name="CurrentConditionTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@color/blue</item>
        <item name="android:colorBackground">@color/blue</item>
    </style>

    <style name="ForecastTheme1" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@color/red1</item>
        <item name="android:colorBackground">@color/red1</item>
    </style>

    <style name="ForecastTheme2" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@color/red2</item>
        <item name="android:colorBackground">@color/red2</item>
    </style>

    <style name="ForecastTheme3" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@color/red3</item>
        <item name="android:colorBackground">@color/red3</item>
    </style>

    <style name="Weather.CurrentTemp" parent="@android:style/TextAppearance.StatusBar.EventContent.Title">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Weather.Forecast" parent="Weather">
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="Weather.Condition" parent="@android:style/TextAppearance.StatusBar.EventContent.Title">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="Windig" parent="@android:style/TextAppearance.Holo"></style>

    <style name="Windig.Location" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textSize">@dimen/Windig_Location</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Windig.UpdateTime" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textSize">@dimen/Windig_UpdateTime</item>
    </style>

    <style name="Windig.ConditionSun" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textSize">@dimen/Windig_Condition</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        
    </style>
    
    <style name="Windig.Condition" parent="Windig.ConditionSun">
        <item name="android:textStyle">bold</item>
    </style>
    
    
    <style name="Windig.ConditionDetails" parent="@android:style/TextAppearance.Holo.Medium">
        <!-- <item name="android:textAppearance">?android:attr/textAppearanceMedium</item> -->
    </style>

    <style name="Windig.CurrentTemp" parent="@android:style/TextAppearance.Holo.Large">

        <!-- <item name="android:textAppearance">?android:attr/textAppearanceLarge</item> -->
        <item name="android:textSize">@dimen/Windig_CurrTemp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Windig.Forecast" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textSize">@dimen/Windig_Forecast</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

	<style name="Windig.ForecastDay" parent="Windig.Forecast">
        <item name="android:textStyle">bold</item>
    </style>    
    
    <style name="Windig.ForecastTemp" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textSize">@dimen/Windig_ForecastTemp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Windig.AltTemp" parent="Windig">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Windig.SunImage" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textSize">@dimen/weathericon_size_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
        
    <style name="Windig.WindInfo" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textSize">@dimen/Windig_Description</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        </style>

    <style name="Windig.WindInfoMedium" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textSize">@dimen/weathericon_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Windig.WindInfoSmall" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textSize">@dimen/weathericon_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    
    
</resources>