<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

        
    <LinearLayout        
        style="@style/nowCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            style="@style/Theme.Velvet.Card.TextAppearance.Medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_block_side_padding"
            android:paddingRight="@dimen/text_block_side_padding"
             />

        <TextView
            android:id="@+id/owner"
            style="@style/Theme.Velvet.Card.TextAppearance.Smaller"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_block_side_padding"
            android:paddingRight="@dimen/text_block_side_padding"
            android:paddingTop="@dimen/text_block_top_padding"
            android:paddingBottom="@dimen/text_block_bottom_padding"
            />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

    </LinearLayout>

</LinearLayout>